<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="이름 입력 필요"/>

    </LinearLayout>

    <Button
        android:id="@+id/nameInputBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름 입력하러 가기"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="폰번 입력 필요"/>


    </LinearLayout>

    <Button
        android:id="@+id/phoneInputBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="폰번 입력하러 가기"/>

    <Button
        android:id="@+id/phoneDialBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="전화 다이얼 화면"/>

    <Button
        android:id="@+id/phoneCallBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="바로 전화 연결"/>

</LinearLayout>